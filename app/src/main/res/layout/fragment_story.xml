<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.story.StoryFragment">

    <!-- LinearLayout to arrange image and text vertically with the image on top -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="start|top">

    <!-- ImageView for displaying the image on top -->
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/image_dicoding"
        android:contentDescription="Image Dicoding"
        android:layout_marginBottom="16dp" />

    <!-- TextView with larger, bold, centered text for the fragment name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="StoryFragment"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    </FrameLayout>
