<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.mystory.MyStoryFragment">

    <!-- LinearLayout to arrange text and image vertically -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- TextView with larger, centered text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello"
            android:textSize="24sp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- ImageView for displaying the image -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/image_dicoding"
            android:contentDescription="Image Dicoding"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</FrameLayout>
