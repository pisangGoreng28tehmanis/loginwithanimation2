<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.mystory.MyStoryFragment">

    <!-- LinearLayout to arrange text and image vertically with the text at the top -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal|top"
        android:padding="16dp">

        <!-- TextView with centered text for the fragment name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MyStoryFragment"
            android:textSize="24sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <!-- ImageView for displaying the image below the text -->
        <Button
            android:id="@+id/uploadStoryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Story"
            android:layout_centerInParent="true"/>


    </LinearLayout>

</FrameLayout>
